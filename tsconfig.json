{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./",
    "strict": true, 
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,      
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true 
  },
  "files": [
    "src/ts/index.ts"
  ]
}